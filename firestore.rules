rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow read if the email matches the document's email
      allow read: if request.query.limit == 1 && 
                  request.query.where[0].field == 'email';
      
      // Allow create if email is provided and unique
      allow create: if request.resource.data.email is string &&
                   !exists(/databases/$(database)/documents/users/$(request.query.where[0].value));
    }
    
    match /interviews/{interviewId} {
      // Allow read and write if the email matches the interview's userEmail
      allow read, write: if request.auth == null && 
                        resource.data.userEmail == request.resource.data.userEmail;
      
      // Allow create with valid user email
      allow create: if request.resource.data.userEmail is string;
    }
  }
}